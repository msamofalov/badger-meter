<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Days_Since_Last_Action__c</fullName>
    <description>Days since the record was last modified</description>
    <externalId>false</externalId>
    <formula>FLOOR( IF(NOT(ISNULL(LastModifiedDate)), NOW()  - LastModifiedDate,NOW()- CreatedDate))</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Days Since Last Action</label>
    <precision>18</precision>
    <required>false</required>
    <scale>0</scale>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Number</type>
    <unique>false</unique>
</CustomField>
