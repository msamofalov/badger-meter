<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Ship_To_Number_1_Validation</fullName>
    <active>true</active>
    <description>Validate CERT Ship To Number 1.  Must be 4 numbers with leading zeros OR BLANK.</description>
    <errorConditionFormula>ISBLANK(CERT_Shipto_1__c) ==  False &amp;&amp; (LEN(CERT_Shipto_1__c) &lt;&gt; 4 || ISNUMBER(CERT_Shipto_1__c) &lt;&gt; true)</errorConditionFormula>
    <errorDisplayField>CERT_Shipto_1__c</errorDisplayField>
    <errorMessage>Ship To Number 1 must be 4 numbers with leading zeros.</errorMessage>
</ValidationRule>
